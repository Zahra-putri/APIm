<script>
  // Tunggu sampai dokumen selesai dimuat
  $(document).ready(function() {

    // Deteksi event ketika button dengan id btnTambah ditekan
    $('#btnTambah').click(function(event) {

      // Lakukan AJAX Call
      $.ajax({
        url: 'https://jsonplaceholder.typicode.com/posts',
        type: 'GET',
        dataType: 'json',

        // Ketika AJAX Call sukses
        success: function(data) {
          // Format hasil data menggunakan tag HTML tabel
          let table = `
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col" width="10%">Post ID</th>
                  <th scope="col">Title</th>
                  <th scope="col">Body</th>
                </tr>
              </thead>
              <tbody>
          `;

          // Looping baris data, format menggunakan HTML
          $.each(data, function(index, val) {
            table += `
              <tr>
                <td>${val.id}</td>
                <td>${val.title}</td>
                <td>${val.body}</td>
              </tr>
            `;
          });

          // Tutup tabel HTML
          table += `
              </tbody>
            </table>
          `;

          // Update isi div dengan id data menggunakan tabel
          $('div#data').html(table);
        }
      });
    });
  });
</script>
